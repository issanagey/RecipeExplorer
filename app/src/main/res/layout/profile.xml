<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:background="#87CEFA">

    <!-- Navigation Elements -->
    <LinearLayout
        android:id="@+id/navigation_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="16dp">

        <Button
            android:id="@+id/btn_return_home"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Home"
            android:textSize="16sp"
            android:layout_marginEnd="8dp"
            android:padding="8dp"
            android:onClick="Main"/>

        <Button
            android:id="@+id/btn_edit_profile"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Edit Profile"
            android:textSize="16sp"
            android:padding="8dp"/>
    </LinearLayout>

    <!-- User Avatar and Name -->
    <LinearLayout
        android:id="@+id/user_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_below="@id/navigation_bar"
        android:layout_marginBottom="16dp">

        <ImageView
            android:id="@+id/user_avatar"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginEnd="16dp"/>

        <TextView
            android:id="@+id/user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="User Name"
            android:textSize="24sp"
            android:textStyle="bold"/>
    </LinearLayout>

    <!-- User Statistics -->
    <LinearLayout
        android:id="@+id/user_statistics"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/user_statistics_string"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:orientation="vertical">

            <TextView
                android:id="@+id/recipes_tried"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="Recipes Tried:"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/achievements_earned"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="Achievements Earned:"
                android:textSize="18sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/user_statistics_number"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:gravity="start"
            android:orientation="vertical">

            <TextView
                android:id="@+id/stat_recipes_tried"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="-"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/stat_challenges_completed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="-"
                android:textSize="18sp" />

        </LinearLayout>

    </LinearLayout>


    <!-- Challenge Progress Label -->

    <!-- Challenge Progress -->


    <!-- List of Collected Recipes and Achievements -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/scroll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/collected_achievements"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/label_collected_achievements"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="8dp"
                    android:text="Collected Achievements"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <!-- Dynamically generated in java -->

                <!--            <TextView-->
                <!--                android:id="@+id/collected_achievement_1"-->
                <!--                android:layout_width="wrap_content"-->
                <!--                android:layout_height="wrap_content"-->
                <!--                android:text="Achievement 1"-->
                <!--                android:layout_marginBottom="4dp"/>-->

                <!--            <TextView-->
                <!--                android:id="@+id/collected_achievement_2"-->
                <!--                android:layout_width="wrap_content"-->
                <!--                android:layout_height="wrap_content"-->
                <!--                android:text="Achievement 2"-->
                <!--                android:layout_marginBottom="4dp"/>-->
            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>
